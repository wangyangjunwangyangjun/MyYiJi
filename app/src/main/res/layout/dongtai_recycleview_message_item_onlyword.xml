<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/onlywordlikelogo"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/xihuan"
        app:layout_constraintBottom_toBottomOf="@+id/only_wordlikelist"
        app:layout_constraintEnd_toEndOf="@+id/only_wordlikelist"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="@+id/only_wordlikelist"
        app:layout_constraintTop_toTopOf="@+id/only_wordlikelist" />
    <ImageView
        android:id="@+id/user_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/user_id"
        android:layout_width="200dp"
        android:textColor="@color/idcolor"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="18dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <TextView
        android:id="@+id/onlyword_textState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/onlyword_user_describtion"
        app:layout_constraintTop_toBottomOf="@+id/onlyword_user_describtion" />

    <TextView
        android:id="@+id/onlyword_user_describtion"
        android:layout_width="290dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:textSize="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/user_id"
        app:layout_constraintTop_toBottomOf="@+id/user_id" />

    <TextView
        android:id="@+id/time_onlyword"
        android:layout_width="99dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingTop="@dimen/small"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/onlyword_textState"
        app:layout_constraintTop_toBottomOf="@+id/onlyword_textState"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/more_button_only_word"
        android:layout_width="34dp"
        android:layout_height="37dp"
        android:layout_marginStart="336dp"
        android:layout_marginLeft="336dp"
        android:layout_marginRight="24dp"
        android:width="30dp"
        android:height="30dp"
        android:background="@drawable/more"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_onlyword"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/only_wordlikelist"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="3dp"
        app:layout_constraintEnd_toEndOf="@+id/more_button_only_word"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/time_onlyword"
        app:layout_constraintTop_toBottomOf="@+id/more_button_only_word" />

    <TextView
        android:id="@+id/only_word_commment"
        android:layout_width="250dp"
        android:layout_height="25dp"
        android:padding="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/only_wordlikelist"
        app:layout_constraintStart_toStartOf="@+id/only_wordlikelist"
        app:layout_constraintTop_toBottomOf="@+id/only_wordlikelist"
        app:layout_constraintVertical_bias="0.428" />

</androidx.constraintlayout.widget.ConstraintLayout>