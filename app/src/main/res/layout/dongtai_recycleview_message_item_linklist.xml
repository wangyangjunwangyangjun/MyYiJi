<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/linklistlikelogo"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/xihuan"
        app:layout_constraintBottom_toBottomOf="@+id/linklistlikelist"
        app:layout_constraintEnd_toEndOf="@+id/linklistlikelist"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="@+id/linklistlikelist"
        app:layout_constraintTop_toTopOf="@+id/linklistlikelist" />
    <ImageView
        android:id="@+id/user_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/user_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/idcolor"
        android:gravity="left"
        android:textSize="18dp"
        app:layout_constraintHorizontal_bias="0.412"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/linklist_user_describtion"
        android:layout_width="290dp"
        android:layout_height="120dp"
        android:layout_marginTop="8dp"
        android:textSize="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/user_id"
        app:layout_constraintTop_toBottomOf="@+id/user_id" />


    <LinearLayout
        android:id="@+id/linklist_linearLayout"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@color/gainsboro"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/time_linklist"
        app:layout_constraintEnd_toEndOf="@+id/linklist_user_describtion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/linklist_textState">

        <ImageView
            android:id="@+id/linklist_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="9dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />

        <TextView
            android:id="@+id/linklist_text"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:textSize="14dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/linklist_textState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/linklist_linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/linklist_user_describtion"
        app:layout_constraintStart_toStartOf="@+id/linklist_user_describtion" />

    <TextView
        android:id="@+id/time_linklist"
        android:layout_width="107dp"
        android:layout_height="29dp"
        android:textColor="@color/lowgray"

        app:layout_constraintBottom_toTopOf="@+id/linklistlikelist"
        app:layout_constraintStart_toStartOf="@+id/linklist_linearLayout" />

    <Button
        android:id="@+id/more_button_linklist"
        android:layout_width="34dp"
        android:layout_height="28dp"
        android:width="30dp"
        android:height="30dp"

        android:background="@drawable/more"
        app:layout_constraintBottom_toTopOf="@+id/linklistlikelist"
        app:layout_constraintEnd_toEndOf="@+id/linklist_linearLayout"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/time_linklist" />

    <TextView
        android:id="@+id/linklistlikelist"
        android:layout_width="250dp"
        android:layout_height="26dp"
        android:padding="3dp"
        app:layout_constraintBottom_toTopOf="@+id/linklist_commment"
        app:layout_constraintEnd_toEndOf="@+id/more_button_linklist"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/time_linklist" />

    <TextView
        android:id="@+id/linklist_commment"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/linklistlikelist" />

</androidx.constraintlayout.widget.ConstraintLayout>