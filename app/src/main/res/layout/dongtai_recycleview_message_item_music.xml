<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/musiclikelogo"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:src="@drawable/xihuan"
        app:layout_constraintBottom_toBottomOf="@+id/musiclikelist"
        app:layout_constraintEnd_toEndOf="@+id/musiclikelist"
        app:layout_constraintHorizontal_bias="0.003"
        app:layout_constraintStart_toStartOf="@+id/musiclikelist"
        app:layout_constraintTop_toTopOf="@+id/musiclikelist" />
    <ImageView
        android:id="@+id/user_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.006"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.05" />

    <TextView
        android:id="@+id/user_id"
        android:layout_width="200dp"
        android:textColor="@color/idcolor"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:textSize="18dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />


    <TextView
        android:id="@+id/music_textState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/blue"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/music"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/music_user_describtion"
        app:layout_constraintTop_toBottomOf="@+id/music_user_describtion"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/music_user_describtion"
        android:layout_width="290dp"
        android:layout_height="120dp"
        android:layout_marginTop="12dp"
        android:textSize="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/user_id"
        app:layout_constraintTop_toBottomOf="@+id/user_id" />

    <TextView
        android:id="@+id/music"
        android:layout_width="285dp"
        android:layout_height="31dp"
        android:layout_marginTop="16dp"
        android:background="@color/pink"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/music_textState"
        app:layout_constraintTop_toBottomOf="@+id/music_user_describtion"
        app:layout_constraintVertical_bias="0.128" />

    <Button
        android:id="@+id/music_play"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:text="play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/music"
        app:layout_constraintTop_toBottomOf="@+id/music"
        app:layout_constraintVertical_bias="0.05" />

    <Button
        android:id="@+id/music_pause"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="pause"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/music" />

    <Button
        android:id="@+id/music_stop"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:text="stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.912"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/music"
        app:layout_constraintVertical_bias="0.046" />

    <TextView
        android:id="@+id/time_music"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="@+id/music_play"
        app:layout_constraintTop_toBottomOf="@+id/music_play"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/more_button_music"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="156dp"

        android:width="30dp"
        android:height="30dp"
        android:background="@drawable/more"
        app:layout_constraintHorizontal_bias="0.863"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/music_stop" />

    <TextView
        android:id="@+id/musiclikelist"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:padding="3dp"
        app:layout_constraintStart_toStartOf="@+id/time_music"
        app:layout_constraintTop_toBottomOf="@+id/time_music" />

    <TextView
        android:id="@+id/music_commment"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/musiclikelist"
        app:layout_constraintStart_toStartOf="@+id/musiclikelist"
        app:layout_constraintTop_toBottomOf="@+id/musiclikelist"
        app:layout_constraintVertical_bias="0.428" />

</androidx.constraintlayout.widget.ConstraintLayout>